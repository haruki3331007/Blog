<div class="new_book mt-3">
  <h2>New book</h2>

  <%= form_with model: Book.new do |newbook| %>
    <div>
      <p>Title</p>
      <%= newbook.text_field :title, class: "w-100 form-control" %>
    </div>

    <div>
      <p>Opinion</p>
      <%= newbook.text_field :body, class: "w-100 form-control" %>
    </div>

    <div>
      <%= newbook.submit "Create Book", class: "mt-2 btn btn-success" %>
    </div>
  <% end %>

</div>
