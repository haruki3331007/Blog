<div class="container px-2">
  <div class="row">

    <!--user information-->
    <div class="col-md-3">
      <%= render 'user_info' %>

      <!--error message-->
      <div class="error_message">
        <% if @new_book.errors.any? %>
          <%= @new_book.errors.count %> error prohibited this obj from being saved:
          <ul>
            <% @new_book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= render 'book_info' %>
    </div>

    <!--all books-->
    <div class="offset-md-1 col-md-8">
      <h2>Books</h2>

      <table class="table  table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to image_tag(book.user.get_profile_image(80, 80)), user_path(book.user), :controller => 'books', :action => 'show'%>
              </td>
              <td><%= link_to book.title , book_path(book.id), :controller => 'books', :action => 'show' %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>